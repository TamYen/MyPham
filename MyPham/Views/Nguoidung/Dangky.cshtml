
@{
    ViewBag.Title = "Dangky";
    Layout = "~/Views/Shared/_layoutUser.cshtml";
}
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<div class="center_content">
    <table align="center">
        <h2 style="text-align: center"> ĐĂNG KÝ THÀNH VIÊN</h2>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)

            <tr style="height: 40px">
                <td>Họ tên: </td>
                <td>@Html.TextBox("hoten")  @ViewData["loi1"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Tên tài khoản: </td>
                <td>@Html.TextBox("tenDN")  @ViewData["loi2"]</td>
            </tr>

            <tr style="height: 40px">
                <td>Nhập mật khẩu: </td>
                <td>@Html.Password("matkhau")  @ViewData["loi3"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Nhập lại mật khẩu: </td>
                <td>@Html.Password("nhaplaiMK")  @ViewData["loi4"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Email: </td>
                <td>@Html.TextBox("email")  @ViewData["loi5"]</td>
            </tr>

            <tr style="height: 40px">
                <td>Điện thoại: </td>
                <td>@Html.TextBox("dienthoai")  @ViewData["loi6"]</td>
            </tr>
            <tr style="height: 40px">
                <td>Địa chỉ: </td>
                <td>@Html.TextBox("diachi")  @ViewData["loi7"]</td>
            </tr>

            <tr style="height:40px">
                <td>Ngày sinh: </td>
                <td><input type="date" name="ngaysinh" /></td>
            </tr>

            <tr style="height:40px">
                <td> </td>
                <td><input type="submit" value="Đăng ký" /></td>
            </tr>

        }
    </table>

</div>
