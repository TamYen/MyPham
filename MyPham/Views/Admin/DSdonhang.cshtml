@using MyPham.Models
@using PagedList.Mvc;
@model PagedList.PagedList<MyPham.Models.DonDatHang>
@{
    ViewBag.Title = "DSdonhang";
    Layout = "~/Views/Shared/_LayoutPageAdmin.cshtml";
}

<h2>Danh sách các đơn hàng</h2>

@*<p>
    @Html.ActionLink("Create New", "Create")
</p>*@
<table class="table">
    <tr>
        <th>MaDH</th>
        <th>NgayGiao</th>
        <th>TenKH</th>
        <th>Tongtien</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaDH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgayGiao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.KhachHang.TenKH)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Tongtien)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MaDH }) |
            @Html.ActionLink("Details", "Details", new { id=item.MaDH }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.MaDH })
        </td>*@
    </tr>
}

</table>
<h4 style="text-align:center; color:blue">Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount;</h4>
<div class="MenuTrang"> @Html.PagedListPager(Model, page => Url.Action("Sanpham", new { page = page })) </div>
<style>
    .MenuTrang li {
        display: inline;
        font-style: normal;
        font-size: 20px;
        border: ridge;
    }
</style>
